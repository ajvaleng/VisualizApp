<h3>Cuentas</h3>
<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Fecha de Registro</th>
      <th>Rol</th>
      <th>Operador</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
      <td><%= user.operator.name unless user.operator.nil? %></td>
      <td>
        <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Cambiar Rol</a>
        <%= render user %>
      </td>
      <td><%= link_to("Borrar Cuenta", user_path(user), :data => { :confirm => "Esta seguro?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Nueva Cuenta', new_user_path  %>
</div>
