<p id="notice"><%= notice %></p>

<div id='configuracion'>

	<div id='recorridos'>
		<%= select_tag :recorrido, options_for_select(@recorridos.map { |u| [u.code, u.id] }), :prompt => "Seleccione un Recorrido", include_blank: true , class: 'chzn-select' %>
	</div>

	<div id='opciones' style='visibility: hidden;'>
		<div id='ida'>
			<%= check_box_tag(:check_ida, 1, true) %>
			<%= label_tag(:ida, "Ida") %>
		</div>
		<div id='vuelta'>
			<%= check_box_tag(:check_vuelta,  1, true) %>
			<%= label_tag(:vuelta, "Vuelta") %>
		</div>
	</div>

</div>

