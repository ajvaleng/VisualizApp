<center>
<h2><span style="color: #BF1156;">Ingresar</span></h2>
<table border=4 bordercolor=#BF1156>
	<tr><td>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
  	
    &nbsp<center><B><%= f.input :email, :required => false, :autofocus => true %></B></center>
    <center><B><%= f.input :password, :required => false %></center></B>
   <center> <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %></center>

  </div>

  <div class="form-actions">
    <center><%= f.button :submit, "Entrar" %></center>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</td></tr>
</center>